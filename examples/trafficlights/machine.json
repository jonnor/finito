{
    "name": "TrafficLight",
    "states": {
        "green": { },
        "yellow": { },
        "yellow_and_red": { },
        "red": { }
    },
    "transitions": [
        {"from":  "green",
         "to": "yellow",
          "when": "go_red"},

        {"from":  "yellow",
         "to": "red",
         "when": "seconds_passed(1)"},

        {"from":  "red",
          "to": "yellow_and_red",
          "when": "go_green"},

        {"from":  "yellow_and_red",
          "to": "green",
          "when": "seconds_passed(1)"}
    ],
    "initial": {
        "state": "red"
    }
}
